<h1>物件詳細</h1>
<div class="show_item">
  <p><span>物件名: </span><%= @rental.name %></p>
  <p><span>賃料: </span><%= (@rental.rent).to_s.gsub(/(\d)(?=\d{3}+$)/, '\\1,') %>円</p>
  <p><span>住所: </span><%= @rental.address %></p>
  <p><span>築年数 </span><%= @rental.age %>年</p>
  <p><span>備考 </span><%= @rental.note %></p>
</div>
<div class="divide"></div>
<% nearest_stations_count = 1 %>
<% @rental.nearest_stations.each do |m| %>
  <h4><%= "最寄り駅#{nearest_stations_count}" %></h4>
  <div class="show_item">
    <p><span>路線名 </span><%= m.route_name %></p>
    <p><span>駅名 </span><%= m.station_name %></p>
    <p><span>徒歩分数 </span><%= m.walking_time %>分</p>
  </div>
  <% nearest_stations_count += 1 %>
<% end %>
<div class="link_area">
  <p>
    <%= link_to("編集", edit_rental_path(@rental.id)) %>
    <span class="space">|</span><span class="space"></span>
    <%= link_to("戻る", rentals_path) %>
  </p>
</div>
